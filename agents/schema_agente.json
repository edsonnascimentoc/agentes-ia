{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "persona": { "type": "string" },
    "tools": {
      "type": "array",
      "items": { "type": "string" }
    },
    "format": {
      "type": "array",
      "items": { "type": "string" }
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "required": ["id", "persona", "tools", "format", "version"]
}
